---
// src/components/AboutSection.astro

const features = [
    {
        icon: "M13 10V3L4 14h7v7l9-11h-7z",
        title: "Innovación",
        description: "Tecnología de vanguardia"
    },
    {
        icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
        title: "Comunidad",
        description: "Networking vibrante"
    },
    {
        icon: "M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4",
        title: "Flexibilidad",
        description: "Horarios adaptativos"
    },
    {
        icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
        title: "Inspiración",
        description: "Ambiente creativo"
    }
];

const stats = [
    { number: "500+", label: "Makers Activos" },
    { number: "24/7", label: "Acceso al Lab" }
];
---

<section id="sobre-nosotros" class="py-24 bg-curahi-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <div class="reveal-element">
                <h2 class="heading-xl text-white mb-8">
                    Impulsando la <span class="gradient-text">Innovación</span> en Bolivia
                </h2>
                <p class="text-xl text-white/80 leading-relaxed mb-8">
                    Cuarahí nace de la visión de crear un ecosistema donde jóvenes talentosos puedan materializar 
                    sus ideas más audaces. Somos más que un espacio de trabajo: somos una comunidad que 
                    transforma el futuro.
                </p>
                <div class="grid grid-cols-2 gap-8">
                    {stats.map((stat) => (
                        <div class="text-center">
                            <div class="text-4xl font-bold gradient-text mb-2">{stat.number}</div>
                            <div class="text-white/70">{stat.label}</div>
                        </div>
                    ))}
                </div>
            </div>
            
            <div class="relative reveal-element">
                <div class="absolute inset-0 gradient-bg rounded-3xl blur-2xl opacity-20 animate-pulse-glow"></div>
                <div class="relative bg-curahi-navy/50 p-12 rounded-3xl glass-effect">
                    <div class="grid grid-cols-2 gap-8">
                        {features.map((feature) => (
                            <div class="text-center group">
                                <div class="w-16 h-16 gradient-bg rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path>
                                    </svg>
                                </div>
                                <h4 class="font-bold text-white mb-2">{feature.title}</h4>
                                <p class="text-white/70 text-sm">{feature.description}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>