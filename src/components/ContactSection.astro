---
// src/components/ContactSection.astro

const contactInfo = [
    {
        icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
        text: "Santa Cruz - Bolivia"
    },
    {
        icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
        text: "hola@curahi.bo"
    },
    {
        icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
        text: "+591 7123 4567"
    }
];
---

<section id="contacto" class="py-24 gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto reveal-element">
            <h2 class="heading-xl text-white mb-8">
                ¿Listo para <span class="text-curahi-dark">Transformar</span> tu Futuro?
            </h2>
            <p class="text-2xl text-white/90 mb-12 leading-relaxed">
                Únete a nuestra comunidad y comienza tu aventura de innovación hoy mismo.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16">
                <a href="#espacios" class="px-12 py-4 bg-curahi-dark text-white font-bold text-xl rounded-2xl hover:scale-105 transition-all duration-300 shadow-2xl hover-glow">
                    Comenzar Mi Aventura
                </a>
                <a href="mailto:hola@curahi.bo" class="px-12 py-4 border-2 border-curahi-dark text-curahi-dark font-semibold text-xl rounded-2xl hover:bg-curahi-dark hover:text-white transition-all duration-300">
                    Contactar
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-8 text-curahi-dark">
                {contactInfo.map((info) => (
                    <div class="flex items-center justify-center space-x-3 group">
                        <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={info.icon}></path>
                        </svg>
                        <span class="font-semibold">{info.text}</span>
                    </div>
                ))}
            </div>

            <form action="mailto:hola@curahi.bo" method="POST" enctype="text/plain" class="mt-12 grid gap-6 text-left max-w-3xl mx-auto">
            </form>
        </div>
    </div>
</section>