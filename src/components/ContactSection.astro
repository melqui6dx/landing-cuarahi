// src/components/ContactSection.astro

const contactInfo = [
    {
        icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
        text: "Santa Cruz - Bolivia"
    },
    {
        icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
        text: "hola@curahi.bo"
    },
    {
        icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
        text: "+591 7123 4567"
    }
];
---

<section id="contacto" class="contact-section relative py-32 overflow-hidden">
    <!-- Fondo sólido con gradiente -->
    <div class="absolute inset-0 bg-[#ff5200]"></div>
    <div class="absolute inset-0 noise-texture opacity-[0.05]"></div>
    
    <!-- Partículas sutiles -->
    <div class="particles-container">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
    </div>
    
    <!-- Elemento decorativo simple -->
    <div class="absolute top-16 left-1/2 transform -translate-x-1/2">
        <div class="w-12 h-1 bg-white/30 rounded-full"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto fade-up opacity-0" id="contact-content">
            <h2 class="text-5xl font-bold text-white mb-8 tracking-tight">
                ¿Listo para <span class="gradient-text-static">Transformar</span> tu Futuro?
            </h2>
            
            <p class="text-xl text-white/90 mb-16 leading-relaxed">
                Únete a nuestra comunidad y comienza tu aventura de innovación hoy mismo.
            </p>
            
            <!-- Botones alineados horizontalmente -->
            <div class="flex justify-center gap-6 mb-20">
                <a href="#espacios" class="cta-button primary-button">
                    Comenzar Mi Aventura
                </a>
                <a href="mailto:hola@curahi.bo" class="cta-button secondary-button">
                    Contactar
                </a>
            </div>

            <!-- Contenedor simplificado para los iconos de contacto -->
            <div class="contact-info-container">
                {contactInfo.map((info) => (
                    <div class="contact-item">
                        <div class="icon-wrapper">
                            <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={info.icon}></path>
                            </svg>
                        </div>
                        <span class="info-text">{info.text}</span>
                    </div>
                ))}
            </div>
        </div>
    </div>
    
    <!-- Script para animaciones de entrada -->
    <script>
        // Observador de intersección para animaciones al scroll
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            const target = entry.target as HTMLElement;
                            target.style.opacity = '1';
                            target.style.transform = 'translateY(0)';
                        }, 0);
                    }
                });
            },
            { threshold: 0.1 }
        );

        // Observar elementos
        document.querySelectorAll('.fade-up').forEach((el) => {
            const element = el as HTMLElement;
            element.style.transform = 'translateY(30px)';
            element.style.transition = 'all 1s cubic-bezier(0.4, 0, 0.2, 1)';
            observer.observe(element);
        });
    </script>
</section>

<style>
/* Sección general */
.contact-section {
    position: relative;
}

/* Partículas sutiles */
.particles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.particle {
    position: absolute;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.3);
    z-index: 1;
}

.particle-1 {
    width: 6px;
    height: 6px;
    top: 20%;
    left: 10%;
    animation: float 20s infinite ease-in-out;
}

.particle-2 {
    width: 8px;
    height: 8px;
    top: 70%;
    left: 20%;
    animation: float 25s infinite ease-in-out reverse;
}

.particle-3 {
    width: 5px;
    height: 5px;
    top: 40%;
    left: 85%;
    animation: float 18s infinite ease-in-out;
}

.particle-4 {
    width: 7px;
    height: 7px;
    top: 80%;
    left: 70%;
    animation: float 22s infinite ease-in-out;
}

.particle-5 {
    width: 4px;
    height: 4px;
    top: 15%;
    left: 60%;
    animation: float 15s infinite ease-in-out reverse;
}

@keyframes float {
    0%, 100% {
        transform: translate(0, 0);
    }
    25% {
        transform: translate(50px, 30px);
    }
    50% {
        transform: translate(20px, 60px);
    }
    75% {
        transform: translate(-30px, 30px);
    }
}

/* Texto con gradiente estático (sin desvanecerse) */
.gradient-text-static {
    background: linear-gradient(135deg, #ffffff, #ffb088);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    display: inline-block;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
}

/* Botones rediseñados */
.cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.125rem;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    min-width: 200px;
}

.primary-button {
    background-color: #1c1c1c;
    color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

.primary-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
}

.secondary-button {
    background-color: transparent;
    color: #1c1c1c;
    border: 2px solid #1c1c1c;
}

.secondary-button:hover {
    transform: translateY(-2px);
    background-color: rgba(28, 28, 28, 0.1);
}

/* Contenedor de información de contacto simplificado */
.contact-info-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2rem;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: 16px;
    padding: 1.5rem;
}

/* Items de contacto */
.contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: transform 0.3s ease;
}

.contact-item:hover {
    transform: translateY(-2px);
}

/* Iconos simplificados */
.icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(28, 28, 28, 0.9);
    border-radius: 8px;
}

.contact-icon {
    width: 20px;
    height: 20px;
    color: white;
}

.info-text {
    color: #1c1c1c;
    font-weight: 600;
}

/* Responsive */
@media (max-width: 768px) {
    .contact-info-container {
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }
    
    .cta-button {
        min-width: 160px;
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
    }
}
</style>