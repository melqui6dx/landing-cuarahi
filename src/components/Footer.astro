            </div>
        </div>

        <!-- Línea de separación con efecto de gradiente -->
        <div class="mt-16 mb-8 relative">
            <div class="separator-line"></div>
        </div>

        <!-- Pie de página con copyright -->
        <div class="text-center">
            <p class="text-white/60 copyright-text">
                © 2025 Cuarahí. Todos los derechos reservados. Hecho con <span class="heart">♥</span> en Santa Cruz, Bolivia.
            </p>
        </div>
    </div>
    
    <!-- Script para efectos de hover -->
    <script>
        // Efecto de hover en enlaces con colores personalizados
        document.querySelectorAll('.footer-link').forEach(link => {
            link.addEventListener('mouseenter', () => {
                const color = link.getAttribute('data-color') || '#ffffff';
                const indicator = link.querySelector('.link-indicator');
                indicator.style.backgroundColor = color;
                indicator.style.width = '100%';
            });
            
            link.addEventListener('mouseleave', () => {
                const indicator = link.querySelector('.link-indicator');
                indicator.style.width = '0';
            });
        });
    </script>
</footer>

<style>
/* Estilo general del footer */
.footer-section {
    position: relative;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
}

/* Línea superior con gradiente animado */
.footer-gradient-line {
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 82, 0, 0.5), 
        rgba(59, 130, 246, 0.5), 
        rgba(255, 188, 13, 0.5), 
        transparent
    );
    animation: gradientMove 10s infinite linear;
}

@keyframes gradientMove {
    0% {
        background-position: 0% 0%;
    }
    100% {
        background-position: 100% 0%;
    }
}

/* Animación de pulso lenta para los orbes de fondo */
@keyframes pulse-slow {
    0%, 100% {
        opacity: 0.3;
        transform: scale(0.95);
    }
    50% {
        opacity: 0.5;
        transform: scale(1.05);
    }
}

.animate-pulse-slow {
    animation: pulse-slow 15s infinite ease-in-out;
}

.animate-pulse-slow-delay {
    animation: pulse-slow 15s infinite ease-in-out;
    animation-delay: -7.5s;
}

/* Efecto de partículas */
.footer-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.particle {
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    animation: float 20s infinite ease-in-out;
}

.particle-1 {
    top: 10%;
    left: 10%;
    background: rgba(255, 82, 0, 0.5);
    animation-delay: -5s;
}

.particle-2 {
    top: 20%;
    right: 20%;
    background: rgba(59, 130, 246, 0.5);
    animation-delay: -2s;
}

.particle-3 {
    top: 70%;
    left: 30%;
    background: rgba(255, 188, 13, 0.5);
    animation-delay: -8s;
}

.particle-4 {
    top: 40%;
    right: 10%;
    background: rgba(255, 255, 255, 0.5);
    animation-delay: -12s;
}

.particle-5 {
    top: 80%;
    right: 40%;
    background: rgba(255, 82, 0, 0.5);
    animation-delay: -15s;
}

@keyframes float {
    0%, 100% {
        transform: translate(0, 0);
    }
    25% {
        transform: translate(100px, 50px);
    }
    50% {
        transform: translate(50px, 100px);
    }
    75% {
        transform: translate(-50px, 50px);
    }
}

/* Líneas interconectadas */
.footer-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.line {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.1), 
        transparent
    );
}

.line-1 {
    width: 70%;
    top: 30%;
    left: 15%;
}

.line-2 {
    width: 50%;
    top: 60%;
    left: 25%;
}

.line-3 {
    width: 80%;
    top: 80%;
    left: 10%;
}

/* Logo del footer */
.footer-logo-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    transition: transform 0.3s ease;
}

.footer-logo-container:hover {
    transform: translateY(-3px);
}

.logo-glass {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: rgba(255, 82, 0, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border: 1px solid rgba(255, 82, 0, 0.2);
    overflow: hidden;
}

.logo-aura {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(255, 82, 0, 0.3), transparent 70%);
    opacity: 0.5;
    transition: opacity 0.3s ease;
}

.footer-logo-container:hover .logo-aura {
    opacity: 0.8;
}

.logo-svg {
    width: 30px;
    height: 30px;
    position: relative;
    z-index: 1;
}

.brand-text {
    font-size: 1.75rem;
    font-weight: 700;
    letter-spacing: -0.025em;
}

/* Texto descriptivo con efecto sutil */
.description-text {
    position: relative;
    padding-left: 12px;
    border-left: 2px solid rgba(255, 82, 0, 0.3);
}

/* Iconos sociales con efectos avanzados */
.social-icons-container {
    display: flex;
    gap: 1rem;
}

.social-icon {
    position: relative;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: transform 0.3s ease;
    text-decoration: none;
}

.social-icon:hover {
    transform: translateY(-3px);
}

.icon-bg {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: background 0.3s ease;
}

.social-icon:hover .icon-bg {
    background: rgba(255, 82, 0, 0.15);
    border-color: rgba(255, 82, 0, 0.3);
}

.icon-svg {
    width: 18px;
    height: 18px;
    color: rgba(255, 255, 255, 0.7);
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
}

.social-icon:hover .icon-svg {
    color: rgba(255, 255, 255, 0.9);
}

.icon-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(255, 82, 0, 0.3), transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.social-icon:hover .icon-glow {
    opacity: 1;
}

/* Columnas del footer */
.footer-column {
    position: relative;
}

.column-content {
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 1.5rem;
    height: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.footer-column:hover .column-content {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-color: rgba(255, 255, 255, 0.1);
}

.column-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1.25rem;
    position: relative;
    padding-bottom: 0.75rem;
}

.column-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, rgba(255, 82, 0, 0.8), transparent);
}

/* Enlaces del footer con efectos */
.footer-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.footer-link {
    position: relative;
    text-decoration: none;
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.link-text {
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.3s ease, transform 0.3s ease;
}

.footer-link:hover .link-text {
    color: rgba(255, 255, 255, 1);
    transform: translateX(5px);
}

.link-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 1px;
    width: 0;
    background-color: white;
    transition: width 0.3s ease;
}

/* Separador con efecto de gradiente */
.separator-line {
    height: 1px;
    width: 100%;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.1), 
        transparent
    );
}

/* Copyright con animación de corazón */
.copyright-text {
    font-size: 0.9rem;
}

.heart {
    color: #ff5200;
    display: inline-block;
    animation: heartbeat 2s infinite;
}

@keyframes heartbeat {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.2);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .social-icons-container {
        justify-content: center;
    }
    
    .column-content {
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }
    
    .footer-logo-container {
        justify-content: center;
        margin-bottom: 1rem;
    }
    
    .description-text {
        text-align: center;
        padding-left: 0;
        border-left: none;
        padding-top: 12px;
        border-top: 2px solid rgba(255, 82, 0, 0.3);
    }
}
</style>