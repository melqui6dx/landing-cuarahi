<footer class="footer-section relative bg-[#0f1419] border-t border-white/10 overflow-hidden">
    <!-- Efectos de fondo -->
    <div class="absolute top-0 left-0 w-full h-1 footer-gradient-line"></div>
    <div class="absolute -top-80 -right-80 w-[500px] h-[500px] rounded-full bg-[#ff5200]/5 blur-3xl animate-pulse-slow"></div>
    <div class="absolute -bottom-80 -left-80 w-[500px] h-[500px] rounded-full bg-[#3b82f6]/5 blur-3xl animate-pulse-slow-delay"></div>
    
    <!-- Efecto de partículas -->
    <div class="footer-particles">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
    </div>
    
    <!-- Líneas interconectadas -->
    <div class="footer-lines">
        <div class="line line-1"></div>
        <div class="line line-2"></div>
        <div class="line line-3"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 py-16">
        <div class="grid md:grid-cols-4 gap-12">
            <!-- Logo y descripción -->
            <div class="md:col-span-2">
                <a href="/" class="footer-logo-container">
