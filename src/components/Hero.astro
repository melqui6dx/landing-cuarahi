---
// src/components/Hero.astro
---

<section class="hero-section relative flex items-center justify-center bg-curahi-navy min-h-screen overflow-hidden py-32">
    <!-- Overlay con textura como SpacesSection -->
    <div class="absolute inset-0 noise-texture"></div>
    
    <!-- Elementos parallax decorativos que se extienden hacia SpacesSection -->
    <div class="parallax-bg-slow absolute inset-0 z-0">
        <!-- Círculos grandes de fondo que conectan ambas secciones -->
        <div class="absolute -top-32 -left-32 w-96 h-96 bg-gradient-to-br from-curahi-yellow/10 to-curahi-orange/5 rounded-full blur-3xl"></div>
        <div class="absolute top-1/3 -right-48 w-80 h-80 bg-gradient-to-bl from-curahi-red/8 to-curahi-yellow/5 rounded-full blur-2xl"></div>
        <div class="absolute -bottom-64 left-1/4 w-[600px] h-[600px] bg-gradient-to-t from-curahi-orange/12 to-transparent rounded-full blur-3xl"></div>
    </div>
    
    <!-- Elementos parallax medianos -->
    <div class="parallax-bg-medium absolute inset-0 z-1">
        <div class="absolute top-20 left-16 w-40 h-40 bg-curahi-yellow/15 rounded-full blur-xl"></div>
        <div class="absolute top-2/3 right-12 w-32 h-32 bg-curahi-red/12 rounded-full blur-xl"></div>
        <div class="absolute bottom-20 left-1/3 w-48 h-48 bg-curahi-orange/10 rounded-full blur-2xl"></div>
    </div>
    
    <!-- Elementos parallax rápidos (partículas flotantes) -->
    <div class="parallax-bg-fast absolute inset-0 z-2">
        <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-curahi-yellow/20 rounded-full blur-xl animate-float"></div>
        <div class="absolute bottom-1/3 right-1/4 w-24 h-24 bg-curahi-red/15 rounded-full blur-xl animate-float" style="animation-delay: -2s;"></div>
        <div class="absolute top-1/2 right-1/3 w-16 h-16 bg-curahi-orange/18 rounded-full blur-xl animate-float" style="animation-delay: -4s;"></div>
        
        <!-- Partículas pequeñas brillantes -->
        <div class="absolute top-16 left-1/3 w-3 h-3 bg-curahi-yellow rounded-full animate-pulse opacity-60"></div>
        <div class="absolute top-1/3 right-16 w-2 h-2 bg-curahi-orange rounded-full animate-pulse opacity-80" style="animation-delay: -1s;"></div>
        <div class="absolute bottom-24 left-20 w-4 h-4 bg-curahi-red rounded-full animate-pulse opacity-50" style="animation-delay: -3s;"></div>
        <div class="absolute top-3/4 right-1/3 w-2 h-2 bg-curahi-yellow rounded-full animate-pulse opacity-70" style="animation-delay: -2s;"></div>
    </div>
    
    <!-- Ondas de conexión que fluyen hacia SpacesSection -->
    <div class="parallax-waves absolute bottom-0 left-0 right-0 z-1">
        <div class="wave-1 absolute bottom-0 w-full h-32 bg-gradient-to-t from-curahi-yellow/8 to-transparent"></div>
        <div class="wave-2 absolute bottom-0 w-full h-24 bg-gradient-to-t from-curahi-orange/6 to-transparent"></div>
        <div class="wave-3 absolute bottom-0 w-full h-16 bg-gradient-to-t from-curahi-red/4 to-transparent"></div>
    </div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 text-center max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="space-y-12">
            <!-- Logo principal con efecto de levitación -->
            <div class="mb-16 parallax-content">
                <div class="w-24 h-24 mx-auto mb-6 rounded-3xl gradient-bg flex items-center justify-center animate-pulse-glow hover-glow relative">
                    <!-- Aura expandida -->
                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-curahi-yellow/30 to-curahi-orange/20 blur-2xl scale-150 animate-pulse" style="animation-duration: 4s;"></div>
                    <div class="relative w-12 h-12 bg-white rounded-2xl opacity-90"></div>
                </div>
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-3">
                    <span class="gradient-text">Cuarahí</span>
                </h1>
            </div>
            
            <!-- Título principal -->
            <h2 class="parallax-content text-3xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-12">
                Donde las 
                <span class="gradient-text relative">
                    Ideas Cobran Vida
                    <!-- Efecto de dispersión de energía -->
                    <div class="absolute -inset-4 bg-gradient-to-r from-curahi-yellow/20 via-curahi-orange/10 to-curahi-red/20 blur-xl opacity-50 animate-pulse" style="animation-duration: 6s;"></div>
                </span>
            </h2>
            
            <!-- Descripción -->
            <p class="parallax-content text-lg md:text-xl lg:text-2xl mb-16 text-white/90 max-w-5xl mx-auto leading-relaxed">
                Únete a la comunidad de creadores, desarrolladores y educadores más vibrante de Bolivia. 
                Accede a laboratorios de última generación, talleres gratuitos y proyectos revolucionarios.
            </p>
            
            <!-- Botones de acción -->
<div class="parallax-content flex flex-col sm:flex-row gap-8 justify-center items-center">
    <a href="#espacios" class="btn-primary px-10 py-4 bg-gradient-to-r from-curahi-yellow to-curahi-orange text-white font-semibold text-lg rounded-2xl hover:bg-yellow-500/80 transition-all duration-300 relative overflow-hidden">
        <span class="relative z-10">Explorar Espacios</span>
        <!-- Efecto de ondas en hover -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full hover:translate-x-full transition-transform duration-1000 rounded-2xl"></div>
    </a>
    <a href="#sobre-nosotros" class="btn-secondary px-10 py-4 border-2 border-white text-white font-semibold text-lg rounded-2xl hover:bg-white/10 transition-all duration-300 relative overflow-hidden">
        <span class="relative z-10">Conocer Más</span>
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-yellow-500/10 to-transparent -translate-x-full hover:translate-x-full transition-transform duration-700"></div>
    </a>
</div>
            </div>
        </div>
    </div>

    <!-- Indicador de scroll con animación mejorada -->
    <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 z-10">
        <div class="scroll-indicator animate-bounce">
            <div class="scroll-indicator-dot animate-pulse bg-gradient-to-b from-curahi-yellow to-curahi-orange"></div>
        </div>
        <!-- Líneas de energía que bajan -->
        <div class="absolute top-12 left-1/2 transform -translate-x-1/2 w-px h-16 bg-gradient-to-b from-curahi-yellow/60 to-transparent animate-pulse"></div>
    </div>
</section>

<style>
/* Efectos parallax suaves y controlados */
.hero-section {
    cursor: default !important;
    margin-bottom: 0 !important;
    /* Sección más alta */
    min-height: 120vh;
}

.hero-section * {
    cursor: default !important;
}

.hero-section a {
    cursor: pointer !important;
}

/* Prevenir selección en elementos decorativos */
.hero-section h1,
.hero-section h2,
.hero-section p {
    user-select: none !important;
}

/* Capas parallax con diferentes velocidades */
.parallax-bg-slow {
    will-change: transform;
    transform: translateZ(0);
}

.parallax-bg-medium {
    will-change: transform;
    transform: translateZ(0);
}

.parallax-bg-fast {
    will-change: transform;
    transform: translateZ(0);
}

.parallax-content {
    will-change: transform;
    transform: translateZ(0);
}

.parallax-waves {
    will-change: transform;
    transform: translateZ(0);
}

/* Animaciones de ondas */
.wave-1 {
    animation: wave-flow 8s ease-in-out infinite;
}

.wave-2 {
    animation: wave-flow 6s ease-in-out infinite reverse;
    animation-delay: -2s;
}

.wave-3 {
    animation: wave-flow 10s ease-in-out infinite;
    animation-delay: -4s;
}

@keyframes wave-flow {
    0%, 100% {
        transform: scaleX(1) translateX(0);
        opacity: 0.8;
    }
    50% {
        transform: scaleX(1.1) translateX(10px);
        opacity: 1;
    }
}

/* Efecto de levitación suave para el logo */
.parallax-content:first-child {
    animation: gentle-float 8s ease-in-out infinite;
}

@keyframes gentle-float {
    0%, 100% {
        transform: translateY(0) scale(1);
    }
    50% {
        transform: translateY(-5px) scale(1.02);
    }
}

/* Efectos de brillo dinámico */
.gradient-bg {
    position: relative;
    overflow: hidden;
}

.gradient-bg::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(from 0deg, transparent, rgba(255, 184, 0, 0.3), transparent, rgba(255, 107, 26, 0.2), transparent);
    animation: rotate-glow 20s linear infinite;
}

@keyframes rotate-glow {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
</style>