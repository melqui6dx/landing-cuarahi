---

<section class="hero-section relative flex items-center justify-center min-h-screen overflow-hidden">
    <!-- Fondo degradado estilo Eco -->
    <div class="absolute inset-0 hero-background"></div>
    
    <!-- Textura de ruido sutil -->
    <div class="absolute inset-0 noise-texture-eco"></div>
    
    <!-- Elementos flotantes estilo Eco -->
    <div class="floating-elements absolute inset-0 z-1">
        <!-- Orbes grandes con glassmorphism -->
        <div class="floating-orb floating-orb--large"></div>
        <div class="floating-orb floating-orb--medium"></div>
        <div class="floating-orb floating-orb--small"></div>
        
        <!-- Partículas brillantes minimalistas -->
        <div class="particle particle--1"></div>
        <div class="particle particle--2"></div>
        <div class="particle particle--3"></div>
        <div class="particle particle--4"></div>
        <div class="particle particle--5"></div>
    </div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 text-center max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="hero-content">
            <!-- Logo principal con efecto glassmorphism -->
            <div class="logo-container">
                <div class="logo-glass">
                    <!-- Aura de glassmorphism -->
                    <div class="logo-aura"></div>
                    <div class="logo-inner"></div>
                </div>
                <h1 class="logo-title">
                    <span class="brand-text">Cuarahí</span>
                </h1>
            </div>
            
            <!-- Título principal -->
            <h2 class="hero-title">
                Donde las 
                <span class="gradient-text-eco">Ideas Cobran Vida</span>
            </h2>
            
            <!-- Descripción -->
            <p class="hero-description">
                Únete a la comunidad de creadores, desarrolladores y educadores más vibrante de Bolivia. 
                Accede a laboratorios de última generación, talleres gratuitos y proyectos revolucionarios.
            </p>
            
            <!-- Botones de acción estilo Eco -->
            <div class="hero-actions">
                <a href="#espacios" class="eco-button eco-button--primary">
                    <span class="relative z-10">Explorar Espacios</span>
                    <div class="button-shine"></div>
                </a>
                <a href="#sobre-nosotros" class="eco-button eco-button--glass">
                    <span class="relative z-10">Conocer Más</span>
                    <div class="button-shine"></div>
                </a>
            </div>
        </div>
    </div>

    <!-- Indicador de scroll minimalista -->
    <div class="scroll-indicator-container">
        <div class="scroll-indicator-eco">
            <div class="scroll-dot"></div>
        </div>
        <div class="scroll-line"></div>
    </div>
</section>

<style>
/* Variables de colores estilo Eco adaptadas */
:root {
    --eco-primary-bg: linear-gradient(135deg, #0f1419 0%, #1a2332 50%, #0d1117 100%);
    --eco-blue: #3b82f6;
    --eco-blue-light: #60a5fa;
    --eco-orange: #f97316;
    --eco-orange-light: #fb923c;
    --eco-yellow: #fbbf24;
    --eco-yellow-light: #fcd34d;
    --eco-glass: rgba(255, 255, 255, 0.1);
    --eco-glass-border: rgba(255, 255, 255, 0.2);
    --eco-text-primary: #ffffff;
    --eco-text-secondary: rgba(255, 255, 255, 0.8);
}

/* Sección hero */
.hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    cursor: default;
    padding: 140px 0 80px; /* Top padding para navbar, bottom para scroll indicator */
}

/* Fondo degradado estilo Eco */
.hero-background {
    background: var(--eco-primary-bg);
    background-attachment: fixed;
}

/* Textura de ruido sutil */
.noise-texture-eco {
    opacity: 0.03;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200"><defs><filter id="noiseFilter"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/></filter></defs><rect width="100%" height="100%" filter="url(%23noiseFilter)" opacity="0.4"/></svg>');
}

/* Elementos flotantes estilo Eco */
.floating-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(40px);
    animation: float-eco 8s ease-in-out infinite;
}

.floating-orb--large {
    width: 400px;
    height: 400px;
    top: 10%;
    right: 10%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
    animation-delay: -2s;
}

.floating-orb--medium {
    width: 250px;
    height: 250px;
    bottom: 20%;
    left: 15%;
    background: radial-gradient(circle, rgba(249, 115, 22, 0.12) 0%, transparent 70%);
    animation-delay: -4s;
}

.floating-orb--small {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 25%;
    background: radial-gradient(circle, rgba(251, 191, 36, 0.1) 0%, transparent 70%);
    animation-delay: -6s;
}

@keyframes float-eco {
    0%, 100% { 
        transform: translateY(0px) translateX(0px) rotate(0deg); 
    }
    25% { 
        transform: translateY(-10px) translateX(5px) rotate(90deg); 
    }
    50% { 
        transform: translateY(-20px) translateX(0px) rotate(180deg); 
    }
    75% { 
        transform: translateY(-10px) translateX(-5px) rotate(270deg); 
    }
}

/* Partículas minimalistas */
.particle {
    position: absolute;
    border-radius: 50%;
    animation: particle-float 4s ease-in-out infinite;
}

.particle--1 {
    width: 4px;
    height: 4px;
    top: 20%;
    left: 25%;
    background: var(--eco-blue);
    animation-delay: 0s;
}

.particle--2 {
    width: 3px;
    height: 3px;
    top: 40%;
    right: 30%;
    background: var(--eco-orange);
    animation-delay: -1s;
}

.particle--3 {
    width: 5px;
    height: 5px;
    bottom: 30%;
    left: 20%;
    background: var(--eco-yellow);
    animation-delay: -2s;
}

.particle--4 {
    width: 2px;
    height: 2px;
    top: 70%;
    right: 40%;
    background: var(--eco-blue-light);
    animation-delay: -3s;
}

.particle--5 {
    width: 4px;
    height: 4px;
    top: 30%;
    left: 60%;
    background: var(--eco-orange-light);
    animation-delay: -4s;
}

@keyframes particle-float {
    0%, 100% { 
        transform: translateY(0px) scale(1);
        opacity: 0.6;
    }
    50% { 
        transform: translateY(-20px) scale(1.2);
        opacity: 1;
    }
}

/* Contenedor del contenido hero */
.hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    max-width: 100%;
}

/* Logo container */
.logo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
    animation: logo-entrance 1.2s ease-out;
}

.logo-glass {
    width: 96px;
    height: 96px;
    margin: 0 auto 1rem;
    border-radius: 24px;
    background: var(--eco-glass);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--eco-glass-border);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.logo-glass:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.3);
}

.logo-aura {
    position: absolute;
    inset: 0;
    border-radius: 24px;
    background: linear-gradient(135deg, var(--eco-blue), var(--eco-orange), var(--eco-yellow));
    opacity: 0.1;
    animation: logo-glow 4s ease-in-out infinite;
}

.logo-inner {
    width: 48px;
    height: 48px;
    background: white;
    border-radius: 16px;
    opacity: 0.9;
    position: relative;
    z-index: 2;
}

@keyframes logo-glow {
    0%, 100% { 
        opacity: 0.1;
        transform: scale(1);
    }
    50% { 
        opacity: 0.2;
        transform: scale(1.05);
    }
}

@keyframes logo-entrance {
    0% {
        opacity: 0;
        transform: translateY(30px) scale(0.8);
    }
    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* Título del logo */
.logo-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 600;
    margin: 0;
    color: var(--eco-text-primary);
}

.brand-text {
    display: inline-block;
    animation: fade-in-up 1s ease-out 0.3s both;
}

/* Split text para animaciones tipo Eco */
.split-text {
    display: inline-block;
}

.split-word {
    display: inline-block;
    margin-right: 0.3em;
}

.split-char {
    display: inline-block;
    transform: translateY(100px);
    opacity: 0;
    animation: char-slide-up 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

/* Delays secuenciales para cada letra */
.split-char:nth-child(1) { animation-delay: 0.1s; }
.split-char:nth-child(2) { animation-delay: 0.15s; }
.split-char:nth-child(3) { animation-delay: 0.2s; }
.split-char:nth-child(4) { animation-delay: 0.25s; }
.split-char:nth-child(5) { animation-delay: 0.3s; }
.split-char:nth-child(6) { animation-delay: 0.35s; }
.split-char:nth-child(7) { animation-delay: 0.4s; }
.split-char:nth-child(8) { animation-delay: 0.45s; }

@keyframes char-slide-up {
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Título principal */
.hero-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 500;
    line-height: 1.2;
    letter-spacing: -0.01em;
    margin: 0;
    color: var(--eco-text-primary);
    animation: fade-in-up 1s ease-out 0.6s both;
}

/* Gradiente de texto estilo Eco */
.gradient-text-eco {
    background: linear-gradient(135deg, var(--eco-blue) 0%, var(--eco-orange) 50%, var(--eco-yellow) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradient-shift 6s ease-in-out infinite;
}

@keyframes gradient-shift {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

/* Descripción */
.hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: var(--eco-text-secondary);
    max-width: 36rem;
    margin: 0;
    animation: fade-in-up 1s ease-out 0.9s both;
}

@keyframes fade-in-up {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Botones estilo Eco */
.hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    margin-top: 1rem;
    animation: fade-in-up 1s ease-out 1.2s both;
}

@media (min-width: 640px) {
    .hero-actions {
        flex-direction: row;
        gap: 2rem;
        justify-content: center;
    }
}

.eco-button {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2.5rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: none;
    position: relative;
    overflow: hidden;
}

.eco-button--primary {
    background: linear-gradient(135deg, var(--eco-blue), var(--eco-orange));
    color: white;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.eco-button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
    background: linear-gradient(135deg, var(--eco-blue-light), var(--eco-orange-light));
}

.eco-button--glass {
    background: var(--eco-glass);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--eco-glass-border);
    color: var(--eco-text-primary);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.eco-button--glass:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
}

/* Efecto de brillo en botones */
.button-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
}

.eco-button:hover .button-shine {
    left: 100%;
}

/* Indicador de scroll estilo Eco */
.scroll-indicator-container {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    animation: fade-in-up 1s ease-out 1.5s both;
}

.scroll-indicator-eco {
    width: 2rem;
    height: 3rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 9999px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 0.5rem;
    margin-bottom: 1rem;
    animation: bounce-subtle 2s infinite;
}

.scroll-dot {
    width: 4px;
    height: 8px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 9999px;
    animation: scroll-dot-move 2s ease-in-out infinite;
}

.scroll-line {
    width: 1px;
    height: 4rem;
    background: linear-gradient(to bottom, rgba(59, 130, 246, 0.6), transparent);
    margin: 0 auto;
    animation: pulse-line 2s ease-in-out infinite;
}

@keyframes bounce-subtle {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
}

@keyframes scroll-dot-move {
    0% {
        transform: translateY(0);
        opacity: 1;
    }
    50% {
        transform: translateY(12px);
        opacity: 0.5;
    }
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes pulse-line {
    0%, 100% {
        opacity: 0.6;
    }
    50% {
        opacity: 1;
    }
}

/* Responsive */
@media (max-width: 768px) {
    .hero-section {
        padding: 120px 1rem 60px;
    }
    
    .hero-content {
        gap: 1.25rem;
    }
    
    .logo-container {
        gap: 0.75rem;
        margin-bottom: 0.25rem;
    }
    
    .logo-glass {
        width: 80px;
        height: 80px;
    }
    
    .logo-inner {
        width: 40px;
        height: 40px;
    }
    
    .eco-button {
        padding: 0.875rem 2rem;
        font-size: 1rem;
    }
    
    .hero-title {
        font-size: clamp(1.75rem, 5vw, 2.5rem);
    }
    
    .logo-title {
        font-size: clamp(2rem, 4vw, 2.5rem);
    }
    
    .hero-description {
        max-width: 32rem;
        font-size: clamp(0.95rem, 2vw, 1.1rem);
    }
    
    .scroll-indicator-container {
        bottom: 1rem;
    }
}

/* Reduce motion para accesibilidad */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

/* Prevenir selección en elementos decorativos */
.hero-section h1,
.hero-section h2,
.hero-section p {
    user-select: none;
}

.hero-section a {
    cursor: pointer;
}
</style>