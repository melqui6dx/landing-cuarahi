---
// src/components/Hero.astro - Minimal Typography-driven design
---

<section class="hero-section relative flex items-center justify-center min-h-screen overflow-hidden">
    <!-- Fondo degradado estilo Eco -->
    <div class="absolute inset-0 hero-background"></div>
    
    <!-- Textura de ruido sutil -->
    <div class="absolute inset-0 noise-texture-eco"></div>
    
    <!-- Elementos flotantes estilo Eco optimizados -->
    <div class="floating-elements absolute inset-0 z-1">
        <!-- Orbes grandes con glassmorphism -->
        <div class="floating-orb floating-orb--large"></div>
        <div class="floating-orb floating-orb--medium"></div>
        <div class="floating-orb floating-orb--small"></div>
        
        <!-- Partículas brillantes minimalistas -->
        <div class="particle particle--1"></div>
        <div class="particle particle--2"></div>
        <div class="particle particle--3"></div>
        <div class="particle particle--4"></div>
        <div class="particle particle--5"></div>
    </div>
    
    <!-- Contenido principal Minimal -->
    <div class="relative z-10 text-center max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="hero-content-minimal">
            <!-- Logo minimalista -->
            <div class="logo-minimal-container">
                <div class="logo-accent-bar"></div>
                <img src="/assets/logo-blanco.webp" alt="Cuarahí" class="logo-minimal" />
                <span class="logo-text-minimal">cuarahí</span>
            </div>

            <!-- Título principal oversized -->
            <h1 class="hero-title-minimal">
                <span class="title-main">Donde las Ideas</span>
                <span class="title-accent">Cobran Vida</span>
            </h1>
            
            <!-- Descripción concisa -->
            <p class="hero-description-minimal">
                La comunidad de innovación más avanzada de la UAGRM.
                <br>Laboratorios, talleres y proyectos revolucionarios en la FICCT.
            </p>
            
            <!-- CTA único y prominente -->
            <div class="hero-cta-minimal">
                <a href="#espacios" class="cta-minimal">
                    <span>Explorar Espacios</span>
                    <div class="cta-arrow">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </a>
            </div>

            <!-- Indicador de scroll minimalista -->
            <div class="scroll-indicator-minimal">
                <div class="scroll-line"></div>
                <span class="scroll-text">scroll</span>
            </div>
        </div>
    </div>

</section>

<style>
/* ===== VARIABLES ESTILO ECO ===== */
:root {
    /* Colores base eco.com */
    --eco-primary-bg: linear-gradient(135deg, var(--aesthetic-midnight) 0%, #1a1f3a 50%, #0d0f1a 100%);
    --eco-secondary-bg: rgba(26, 35, 50, 0.8);
    --eco-surface-bg: rgba(255, 255, 255, 0.05);
    
    /* Glassmorphism */
    --eco-glass: rgba(255, 255, 255, 0.1);
    --eco-glass-border: rgba(255, 255, 255, 0.2);
    --eco-glass-hover: rgba(255, 255, 255, 0.15);
    
    /* Colores actualizados Cuarahí */
    --eco-blue: #3b82f6;
    --eco-blue-light: #60a5fa;
    --eco-orange: #ff6b1a;
    --eco-orange-light: #ff8b3d;
    --eco-yellow: #fbbf24;
    --eco-yellow-light: #fcd34d;
    --eco-glass: rgba(255, 255, 255, 0.1);
    --eco-glass-border: rgba(255, 255, 255, 0.2);
    --eco-text-primary: #ffffff;
    --eco-text-secondary: rgba(255, 255, 255, 0.8);
    
    /* Variables estéticas sofisticadas 2024 */
    --aesthetic-blue-nova: #4A5FD1;
    --aesthetic-blue-deep: #1E3B8A;
    --aesthetic-blue-ethereal: #6B7CE8;
    --aesthetic-blue-lavender: #A8B3E8;
    --aesthetic-red-rumors: #8B1538;
    --aesthetic-red-crimson: #C4435C;
    --aesthetic-red-rose: #E8577A;
    --aesthetic-midnight: #0F0F23;
    --aesthetic-pearl: #F8F9FB;
    
    /* Aliases para compatibilidad */
    --cuarahi-blue: var(--aesthetic-blue-nova);
    --cuarahi-blue-light: var(--aesthetic-blue-ethereal);
    --cuarahi-red: var(--aesthetic-red-crimson);
    --cuarahi-red-light: var(--aesthetic-red-rose);
    --cuarahi-cyan: var(--aesthetic-blue-lavender);
}

/* ===== SECCIÓN HERO MANTENIENDO ESTRUCTURA ===== */
.hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    cursor: default;
    padding: 140px 0 80px; /* Mantener padding para navbar */
}

/* ===== FONDOS Y TEXTURAS ORIGINALES ===== */
.hero-background {
    background: var(--eco-primary-bg);
    background-attachment: fixed;
}

.noise-texture-eco {
    opacity: 0.03;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200"><defs><filter id="noiseFilter"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/></filter></defs><rect width="100%" height="100%" filter="url(%23noiseFilter)" opacity="0.4"/></svg>');
}

/* ===== ELEMENTOS FLOTANTES OPTIMIZADOS ===== */
.floating-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(50px);
    animation: float-eco-optimized 12s ease-in-out infinite;
    will-change: transform;
}

.floating-orb--large {
    width: 450px;
    height: 450px;
    top: 5%;
    right: 5%;
    background: radial-gradient(circle, rgba(74, 95, 209, 0.15) 0%, rgba(168, 179, 232, 0.08) 50%, transparent 80%);
    animation-delay: -3s;
}

.floating-orb--medium {
    width: 300px;
    height: 300px;
    bottom: 15%;
    left: 10%;
    background: radial-gradient(circle, rgba(196, 67, 92, 0.12) 0%, rgba(232, 87, 122, 0.06) 50%, transparent 80%);
    animation-delay: -6s;
}

.floating-orb--small {
    width: 200px;
    height: 200px;
    top: 65%;
    right: 20%;
    background: radial-gradient(circle, rgba(168, 179, 232, 0.1) 0%, rgba(74, 95, 209, 0.05) 50%, transparent 80%);
    animation-delay: -9s;
}

@keyframes float-eco-optimized {
    0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1); 
    }
    33% { 
        transform: translateY(-15px) translateX(10px) scale(1.05); 
    }
    66% { 
        transform: translateY(10px) translateX(-5px) scale(0.95); 
    }
}

/* ===== PARTÍCULAS OPTIMIZADAS ===== */
.particle {
    position: absolute;
    border-radius: 50%;
    animation: particle-float-linear 6s ease-in-out infinite;
    will-change: transform, opacity;
}

.particle--1 {
    width: 3px;
    height: 3px;
    top: 25%;
    left: 20%;
    background: var(--aesthetic-blue-ethereal);
    box-shadow: 0 0 8px var(--aesthetic-blue-ethereal);
    animation-delay: 0s;
}

.particle--2 {
    width: 2px;
    height: 2px;
    top: 45%;
    right: 25%;
    background: var(--aesthetic-red-rose);
    box-shadow: 0 0 6px var(--aesthetic-red-rose);
    animation-delay: -2s;
}

.particle--3 {
    width: 4px;
    height: 4px;
    bottom: 35%;
    left: 15%;
    background: var(--aesthetic-blue-lavender);
    box-shadow: 0 0 10px var(--aesthetic-blue-lavender);
    animation-delay: -4s;
}

.particle--4 {
    width: 2px;
    height: 2px;
    top: 75%;
    right: 35%;
    background: var(--aesthetic-blue-nova);
    box-shadow: 0 0 6px var(--aesthetic-blue-nova);
    animation-delay: -1s;
}

.particle--5 {
    width: 3px;
    height: 3px;
    top: 35%;
    left: 65%;
    background: var(--aesthetic-red-crimson);
    box-shadow: 0 0 8px var(--aesthetic-red-crimson);
    animation-delay: -3s;
}

@keyframes particle-float-linear {
    0%, 100% { 
        transform: translateY(0px) scale(1);
        opacity: 0.7;
    }
    50% { 
        transform: translateY(-25px) scale(1.2);
        opacity: 1;
    }
}

/* ===== CONTENIDO MINIMAL ===== */
.hero-content-minimal {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    max-width: 100%;
    opacity: 0;
    animation: hero-enter-minimal 1.2s ease-out 0.3s forwards;
}

@keyframes hero-enter-minimal {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===== LOGO MINIMAL ===== */
.logo-minimal-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    opacity: 0;
    animation: logo-appear-minimal 1s ease-out 0.1s forwards;
}

@keyframes logo-appear-minimal {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.logo-accent-bar {
    width: 32px;
    height: 3px;
    background: linear-gradient(90deg, 
        var(--aesthetic-blue-nova) 0%,
        var(--aesthetic-blue-ethereal) 50%,
        var(--aesthetic-red-crimson) 100%
    );
    border-radius: 2px;
    box-shadow: 0 0 12px rgba(74, 95, 209, 0.4);
}

.logo-minimal {
    width: 28px;
    height: 28px;
    object-fit: contain;
    filter: drop-shadow(0 0 15px rgba(248, 249, 251, 0.6)) 
            drop-shadow(0 0 25px rgba(168, 179, 232, 0.3));
}

.logo-text-minimal {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--aesthetic-pearl);
    letter-spacing: -0.02em;
    text-shadow: 0 0 20px rgba(168, 179, 232, 0.3);
}

/* ===== TIPOGRAFÍA MINIMAL ===== */
.hero-title-minimal {
    font-size: clamp(3.5rem, 12vw, 8rem);
    font-weight: 800;
    line-height: 0.9;
    margin-bottom: 2rem;
    letter-spacing: -0.04em;
    text-align: center;
}

.title-main {
    display: block;
    color: var(--aesthetic-pearl);
    text-shadow: 0 0 40px rgba(168, 179, 232, 0.2);
    opacity: 0;
    animation: title-appear-minimal 1s ease-out 0.5s forwards;
}

.title-accent {
    display: block;
    background: linear-gradient(135deg, 
        var(--aesthetic-blue-nova) 0%,
        var(--aesthetic-blue-ethereal) 35%,
        var(--aesthetic-red-crimson) 70%,
        var(--aesthetic-red-rose) 100%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 300% 300%;
    animation: gradient-flow 8s ease-in-out infinite, title-appear-minimal 1s ease-out 0.7s forwards;
}

@keyframes title-appear-minimal {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes gradient-flow {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

.hero-description-minimal {
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgba(248, 249, 251, 0.75);
    max-width: 36rem;
    margin: 0 auto 3rem;
    font-weight: 400;
    opacity: 0;
    animation: title-appear-minimal 1s ease-out 0.9s forwards;
    text-shadow: 0 0 30px rgba(168, 179, 232, 0.1);
}

/* ===== CTA MINIMAL ===== */
.hero-cta-minimal {
    opacity: 0;
    animation: title-appear-minimal 1s ease-out 1.1s forwards;
    margin-bottom: 4rem;
}

.cta-minimal {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, 
        var(--aesthetic-pearl) 0%,
        rgba(248, 249, 251, 0.98) 100%
    );
    color: var(--aesthetic-midnight);
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    border-radius: 12px;
    border: 1px solid rgba(168, 179, 232, 0.2);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
        0 8px 32px rgba(74, 95, 209, 0.15),
        0 2px 8px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 1);
    position: relative;
    overflow: hidden;
}

.cta-minimal::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
        var(--aesthetic-blue-nova) 0%,
        var(--aesthetic-blue-ethereal) 35%,
        var(--aesthetic-red-crimson) 70%,
        var(--aesthetic-red-rose) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 12px;
}

.cta-minimal:hover {
    transform: translateY(-3px);
    box-shadow: 
        0 12px 40px rgba(74, 95, 209, 0.25),
        0 4px 16px rgba(196, 67, 92, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 1);
    color: var(--aesthetic-pearl);
    border-color: rgba(168, 179, 232, 0.4);
}

.cta-minimal:hover::before {
    opacity: 1;
}

.cta-minimal span,
.cta-arrow {
    position: relative;
    z-index: 1;
}

.cta-arrow {
    transition: transform 0.3s ease;
}

.cta-minimal:hover .cta-arrow {
    transform: translateX(4px);
}

/* ===== SCROLL INDICATOR MINIMAL ===== */
.scroll-indicator-minimal {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: title-appear-minimal 1s ease-out 1.3s forwards;
}

.scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, 
        transparent 0%,
        var(--aesthetic-blue-lavender) 50%,
        transparent 100%
    );
    animation: scroll-pulse 2s ease-in-out infinite;
    box-shadow: 0 0 6px var(--aesthetic-blue-lavender);
}

.scroll-text {
    font-size: 0.75rem;
    color: var(--aesthetic-blue-lavender);
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-shadow: 0 0 10px rgba(168, 179, 232, 0.3);
}

@keyframes scroll-pulse {
    0%, 100% {
        opacity: 0.3;
        transform: scaleY(1);
    }
    50% {
        opacity: 0.8;
        transform: scaleY(1.2);
    }
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 768px) {
    .hero-section {
        padding: 120px 1rem 60px;
    }
    
    .logo-minimal {
        width: 24px;
        height: 24px;
    }
    
    .logo-text-minimal {
        font-size: 1rem;
    }
    
    .logo-accent-bar {
        width: 24px;
        height: 2px;
    }
    
    .hero-title-minimal {
        font-size: clamp(2.5rem, 10vw, 5rem);
        margin-bottom: 1.5rem;
    }
    
    .hero-description-minimal {
        font-size: 1.125rem;
        margin-bottom: 2.5rem;
        max-width: 32rem;
    }
    
    .floating-orb {
        filter: blur(40px);
    }
    
    .floating-orb--large {
        width: 350px;
        height: 350px;
    }
    
    .floating-orb--medium {
        width: 250px;
        height: 250px;
    }
    
    .cta-minimal {
        padding: 1rem 1.75rem;
        font-size: 1rem;
    }
    
    .hero-content-minimal {
        gap: 2.5rem;
    }
}

/* ===== ACCESIBILIDAD ===== */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    .floating-orb,
    .particle {
        animation: none;
    }
    
    .scroll-line {
        animation: none;
    }
}

.hero-section h1,
.hero-section h2,
.hero-section p {
    user-select: none;
}

.hero-section a {
    cursor: pointer;
}
</style>