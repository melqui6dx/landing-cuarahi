    transition: all 0.2s ease;
    padding: 4px;
    border-radius: 4px;
}

.banner-close-btn:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
}

/* ===== NAVBAR PRINCIPAL ===== */
.navbar-eco {
    position: fixed;
    top: calc(var(--banner-height) + 12px); /* Agrega 12px de separaciÃ³n */
    left: 0;
    right: 0;
    z-index: 1000;
    background: transparent;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: var(--navbar-height);
    display: flex;
