<style>
/* ===== VARIABLES ESTILO ECO ===== */
:root {
    --navbar-height: 64px;
    --banner-height: 44px;
    --eco-glass: rgba(255, 255, 255, 0.08);
    --eco-glass-border: rgba(255, 255, 255, 0.12);
    --eco-glass-hover: rgba(255, 255, 255, 0.12);
    --eco-blue: #3b82f6;
    --eco-orange: #fe3a14;
    --eco-yellow: #f7931e;
    --text-primary: #ffffff;
    --text-secondary: rgba(255, 255, 255, 0.8);
    --text-tertiary: rgba(255, 255, 255, 0.6);
}

/* ===== BANNER SUPERIOR ===== */
.top-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1001;
    background: linear-gradient(135deg, #0f1419 0%, #1a2332 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
}

.banner-link {
    color: var(--eco-yellow);
    text-decoration: underline;
    transition: all 0.2s ease;
}

.banner-link:hover {
    color: #fcd34d;
    text-decoration: none;
}

.banner-close-btn {
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.2s ease;
    padding: 4px;
    border-radius: 4px;
}

.banner-close-btn:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
}

/* ===== NAVBAR PRINCIPAL ===== */
.navbar-eco {
    position: fixed;
    top: calc(var(--banner-height) + 12px); /* Agrega 12px de separaci√≥n */
    left: 0;
    right: 0;
    z-index: 1000;
    background: transparent;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: var(--navbar-height);
    display: flex;
    align-items: center;
    justify-content: center;
}

.navbar-container {
    max-width: 1400px;
    width: 100%;
    height: 100%; /* Cambiado a 100% para ocupar todo el alto de la navbar */
    margin: 0 auto;
    padding: 0 4rem; /* Solo padding horizontal */
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 1rem;
}

.navbar-center {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--eco-glass);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--eco-glass-border);
    border-radius: 50px;
    padding: 0.5rem 1.5rem; /* Reduce el padding vertical */
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    justify-self: center;
    height: 52px; /* Opcional: fuerza un alto m√°ximo para evitar desbordes */
    box-sizing: border-box;
}

/* ===== ENLACES EXTERNOS ===== */
.external-links-left,
.external-links-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.external-links-left {
    justify-content: flex-start;
}

.external-links-right {
    justify-content: flex-end;
}

.external-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--text-tertiary);
    transition: all 0.2s ease;
    text-decoration: none;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
}

.external-link:hover {
    color: var(--eco-yellow);
    background: rgba(255, 255, 255, 0.05);
}

/* ===== NAVBAR CENTRAL ===== */

.navbar-center:hover {
    background: var(--eco-glass-hover);
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
}

/* ===== LOGO NAVBAR ===== */
.logo-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
}

.logo-container:hover {
    transform: scale(1.02);
}

.logo-glass-nav {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: linear-gradient(135deg, rgba(254, 58, 20, 0.2), rgba(247, 147, 30, 0.2));
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.logo-svg-nav {
    width: 18px;
    height: 18px;
}

.brand-text-nav {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.025em;
}

/* ===== SEPARADOR ===== */
.nav-separator {
    width: 1px;
    height: 24px;
    background: rgba(255, 255, 255, 0.2);
    margin: 0 0.5rem;
}

/* ===== NAVEGACI√ìN PRINCIPAL ===== */
.nav-links-desktop {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    position: relative;
}

.nav-link:hover {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.1);
}

.nav-link--cta {
    background: rgba(255, 255, 255, 0.12);
    color: var(--text-primary);
    font-weight: 600;
    padding: 0.45rem 0.9rem; /* M√°s peque√±o que antes */
    border-radius: 20px;      /* M√°s peque√±o que antes */
    font-size: 0.95rem;       /* Ligeramente m√°s peque√±o */
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.nav-link--cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
        rgba(59, 130, 246, 0.1) 0%, 
        rgba(249, 115, 22, 0.1) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 25px;
}

.nav-link--cta:hover {
    background: rgba(255, 255, 255, 0.18);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-1px);
    box-shadow: 
        0 6px 25px rgba(0, 0, 0, 0.3),
        0 0 0 1px rgba(59, 130, 246, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.15);
}

.nav-link--cta:hover::before {
    opacity: 1;
}


/* ===== MEN√ö M√ìVIL ===== */
.mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 4px;
    padding: 8px;
    border: none;
    background: var(--eco-glass);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.hamburger-line {
    width: 20px;
    height: 2px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
}

.mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(15, 20, 25, 0.98);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.mobile-menu-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
}

.mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
}

.mobile-nav-link {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 1rem;
    border-radius: 12px;
    transition: all 0.2s ease;
}

.mobile-nav-link:hover {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.05);
}

.mobile-nav-link--cta {
    background: linear-gradient(135deg, var(--eco-blue), var(--eco-orange));
    color: white;
    font-weight: 600;
    text-align: center;
}

.mobile-external-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.mobile-external-link {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-tertiary);
    text-decoration: none;
    padding: 0.75rem;
    transition: all 0.2s ease;
}

.mobile-external-link:hover {
    color: var(--eco-yellow);
}

/* ===== ESTADOS DE SCROLL ===== */
.navbar-scrolled {
    background: rgba(15, 20, 25, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
}

.navbar-scrolled .navbar-center {
    background: var(--eco-glass-hover);
    border-color: rgba(255, 255, 255, 0.15);
}

/* ===== ANIMACIONES ===== */
@keyframes slideDown {
    0% {
        opacity: 0;
        transform: translateY(-20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-slide-down {
    animation: slideDown 0.3s ease-out;
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 1024px) {
    .external-links-left {
        display: none;
    }
    
    .navbar-container {
        grid-template-columns: auto 1fr;
        gap: 1rem;
    }
    
    .external-links-right {
        gap: 1rem;
    }
}

@media (max-width: 768px) {
    .top-banner {
        display: none;
    }
    
    .navbar-eco {
        top: 0;
    }
    
    .navbar-container {
        grid-template-columns: 1fr auto;
        padding: 0 1rem;
    }
    
    .external-links-right,
    .nav-links-desktop {
        display: none;
    }
    
    .mobile-menu-btn {
        display: flex;
    }
    
    .navbar-center {
        padding: 0.5rem 1rem;
        gap: 0.75rem;
    }
    
    .nav-separator {
        display: none;
    }
    
    .mobile-menu.show {
        display: block;
    }
}

@media (max-width: 640px) {
    .navbar-container {
        padding: 0 1rem;
    }
    
    .mobile-menu-content {
        padding: 1.5rem 1rem;
    }
    
    .brand-text-nav {
        font-size: 1rem;
    }
    
    .logo-glass-nav {
        width: 28px;
        height: 28px;
    }
    
    .logo-svg-nav {
        width: 16px;
        height: 16px;
    }
}

/* ===== ACCESIBILIDAD ===== */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

/* ===== FOCUS STATES ===== */
.nav-link:focus,
.external-link:focus,
.mobile-nav-link:focus {
    outline: 2px solid var(--eco-blue);
    outline-offset: 2px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const navbar = document.querySelector('.navbar-eco') as HTMLElement | null;
    const hamburgerLines = document.querySelectorAll('.hamburger-line');
    let isOpen = false;

    // Mobile menu toggle
    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', function() {
            isOpen = !isOpen;
            mobileMenuButton.setAttribute('aria-expanded', String(isOpen));

            if (isOpen) {
                mobileMenu.classList.add('show', 'animate-slide-down');
                // Animar hamburguesa a X
                if (hamburgerLines[0]) (hamburgerLines[0] as HTMLElement).style.transform = 'rotate(45deg) translate(6px, 6px)';
                if (hamburgerLines[1]) (hamburgerLines[1] as HTMLElement).style.opacity = '0';
                if (hamburgerLines[2]) (hamburgerLines[2] as HTMLElement).style.transform = 'rotate(-45deg) translate(6px, -6px)';
            } else {
                mobileMenu.classList.remove('show', 'animate-slide-down');
                // Restaurar hamburguesa
                hamburgerLines.forEach(line => {
                    const element = line as HTMLElement;
                    if (element) {
                        element.style.transform = '';
                        element.style.opacity = '';
                    }
                });
            }
        });

        // Cerrar men√∫ m√≥vil al hacer clic en enlaces
        const mobileLinks = mobileMenu.querySelectorAll('a');
        mobileLinks.forEach(link => {
            link.addEventListener('click', function() {
                isOpen = false;
                mobileMenuButton.setAttribute('aria-expanded', 'false');
                mobileMenu.classList.remove('show', 'animate-slide-down');
                hamburgerLines.forEach(line => {
                    const element = line as HTMLElement;
                    if (element) {
                        element.style.transform = '';
                        element.style.opacity = '';
                    }
                });
            });
        });

        // Cerrar men√∫ m√≥vil al hacer clic fuera
        document.addEventListener('click', (e) => {
            const target = e.target as Node;
            if (!mobileMenuButton.contains(target) && !mobileMenu.contains(target)) {
                if (isOpen) {
                    isOpen = false;
                    mobileMenuButton.setAttribute('aria-expanded', 'false');
                    mobileMenu.classList.remove('show', 'animate-slide-down');
                    hamburgerLines.forEach(line => {
                        const element = line as HTMLElement;
                        if (element) {
                            element.style.transform = '';
                            element.style.opacity = '';
                        }
                    });
                }
            }
        });
    }

    // Navbar scroll effect
    let scrolled = false;
    
    function updateNavbar() {
        const shouldBeScrolled = window.scrollY > 100;
        
        if (shouldBeScrolled !== scrolled) {
            scrolled = shouldBeScrolled;
            
            if (scrolled) {
                navbar?.classList.add('navbar-scrolled');
            } else {
                navbar?.classList.remove('navbar-scrolled');
            }
        }
    }

    // Throttled scroll listener
    let ticking = false;
    
    function onScroll() {
        if (!ticking) {
            requestAnimationFrame(() => {
                updateNavbar();
                ticking = false;
            });
            ticking = true;
        }
    }
    
    window.addEventListener('scroll', onScroll, { passive: true });
    
    // Inicializar estado
    updateNavbar();

    // Banner close functionality
    const bannerCloseBtn = document.querySelector('.banner-close-btn');
    const banner = document.querySelector('.top-banner') as HTMLElement | null;
    
    if (bannerCloseBtn && banner && navbar) {
        bannerCloseBtn.addEventListener('click', function() {
            banner.style.display = 'none';
            navbar.style.top = '0';
        });
    }
});
</script>