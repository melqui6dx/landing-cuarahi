---
// src/components/SpaceCard.astro
export interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
  tagline: string;
  color?: 'neutral';
  delay?: string;
}

const { title, description, href, icon, tagline, color = 'neutral', delay = '0s' } = Astro.props;

// Diseño neutral unificado manteniendo la estética glassmorphism
const neutralStyles = {
  cardBg: 'linear-gradient(135deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.03))',
  borderColor: 'rgba(255, 255, 255, 0.15)',
  textColor: '#ffffff',
  titleColor: '#ffffff',
  iconBg: 'rgba(255, 255, 255, 0.1)',
  iconBorder: 'rgba(255, 255, 255, 0.2)',
  iconShadow: 'rgba(0, 0, 0, 0.2)',
  hoverShadow: 'rgba(255, 255, 255, 0.1)',
  glowColor: 'rgba(255, 255, 255, 0.4)',
  accentColor: 'var(--cuarahi-red)' // Usa el nuevo rojo como único acento
};

const styles = neutralStyles;
---

<a href={href} class="group block">
  <div class="relative overflow-hidden rounded-2xl transition-all duration-500 ease-out hover:-translate-y-2 h-[300px] group-hover:shadow-2xl"
    style={`background: ${styles.cardBg}; backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); border: 1px solid ${styles.borderColor}; box-shadow: var(--eco-shadow-glass); transition: var(--transition-smooth);`}>
    
    <!-- Efecto de borde superior animado con acento rojo -->
    <div class="absolute top-0 left-0 h-1 w-full bg-gradient-to-r from-transparent via-current to-transparent opacity-0 transition-all duration-700 ease-out group-hover:opacity-100"
      style={`color: ${styles.accentColor};`}></div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 p-8 flex flex-col h-full">
      <!-- Icono flotante -->
      <div class="absolute right-8 top-8" style={`animation: float-gentle 6s ease-in-out infinite; animation-delay: ${delay};`}>
        <div class="flex h-14 w-14 items-center justify-center rounded-xl"
          style={`background: linear-gradient(135deg, ${styles.iconBg}, rgba(255, 255, 255, 0.05)); border: 1px solid ${styles.iconBorder}; box-shadow: 0 8px 32px ${styles.iconShadow}, 0 0 20px rgba(220, 38, 38, 0.1), 0 0 40px rgba(220, 38, 38, 0.05);`}>
          <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"
            style={`color: ${styles.accentColor}; filter: drop-shadow(0 0 8px rgba(220, 38, 38, 0.4)) drop-shadow(0 0 16px rgba(220, 38, 38, 0.2));`}>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon}></path>
          </svg>
        </div>
      </div>

      <!-- Texto del card -->
      <div class="mb-auto pt-4">
        <h3 class="mb-3 text-2xl font-bold tracking-tight" style={`color: ${styles.titleColor}; text-shadow: 0 0 20px rgba(255, 255, 255, 0.3), 0 0 40px rgba(255, 255, 255, 0.1);`}>{title}</h3>
        <p class="text-base leading-relaxed text-white/90 line-clamp-4">
          {description}
        </p>
      </div>
      
      <!-- Footer del card con tagline y flecha -->
      <div class="flex items-center justify-between mt-4">
        <span class="font-medium opacity-75 text-sm text-white/80">{tagline}</span>
        <div class="flex h-8 w-8 items-center justify-center rounded-full transition-all duration-300 ease-out group-hover:scale-110"
          style={`background: ${styles.iconBg}; box-shadow: 0 4px 12px ${styles.iconShadow}, 0 0 12px rgba(220, 38, 38, 0.15), 0 0 24px rgba(220, 38, 38, 0.05);`}>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
            style={`color: ${styles.accentColor}; transition: transform 0.3s ease-out; filter: drop-shadow(0 0 6px rgba(220, 38, 38, 0.4)) drop-shadow(0 0 12px rgba(220, 38, 38, 0.2));`}>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    </div>
    
    <!-- Overlay de brillo al hacer hover -->
    <div class="absolute inset-0 bg-gradient-to-br from-transparent to-white/5 opacity-0 transition-opacity duration-500 ease-out group-hover:opacity-100"></div>
  </div>
</a>