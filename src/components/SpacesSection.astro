---
// src/components/SpacesSection.astro
import SpaceCard from './SpaceCard.astro';

const spaces = [
    {
        title: "MakerSpace",
        description: "Laboratorio de fabricación digital con impresoras 3D, herramientas de prototipado y tecnología de vanguardia.",
        href: "/makerspace",
        icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z",
        tagline: "Crear • Prototipar • Innovar",
        color: "yellow" as const,
        delay: "0s"
    },
    {
        title: "DevSpace",
        description: "Hub de desarrollo web y consultoría tecnológica para proyectos innovadores y startups.",
        href: "/devspace",
        icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
        tagline: "Desarrollar • Colaborar • Escalar",
        color: "orange" as const,
        delay: "0.3s"
    },
    {
        title: "EduSpace",
        description: "Plataforma educativa peer-to-peer donde estudiantes enseñan y aprenden entre sí.",
        href: "/eduspace",
        icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
        tagline: "Enseñar • Aprender • Crecer",
        color: "red" as const,
        delay: "0.6s"
    }
];
---

<section id="espacios" class="relative py-32">
  <!-- Textura de ruido de fondo -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#0f1419] to-[#0d1117] opacity-90"></div>
  <div class="absolute inset-0 noise-texture opacity-[0.03]"></div>
  
  <!-- Elementos decorativos de fondo -->
  <div class="absolute -top-40 -right-40 h-96 w-96 rounded-full bg-gradient-to-br from-[#3b82f6]/10 to-transparent blur-3xl"></div>
  <div class="absolute -bottom-40 -left-40 h-96 w-96 rounded-full bg-gradient-to-tr from-[#f97316]/10 to-transparent blur-3xl"></div>
  
  <div class="relative z-10 mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Encabezado de sección -->
    <div class="mb-24 text-center opacity-0 transition-all duration-1000 ease-out" id="section-header">
      <h2 class="heading-xl mb-6 text-white">
        Nuestros <span class="text-gradient">Espacios</span>
      </h2>
      <p class="mx-auto max-w-3xl text-2xl leading-relaxed text-white/80">
        Tres universos de posibilidades infinitas para tu crecimiento profesional y personal
      </p>
      
      <!-- Separador decorativo -->
      <div class="mx-auto mt-8 flex items-center justify-center gap-4">
        <span class="h-[1px] w-12 bg-gradient-to-r from-transparent to-white/20"></span>
        <div class="flex h-2 w-2 items-center justify-center rounded-full bg-white/20">
          <div class="h-1 w-1 animate-pulse rounded-full bg-white/60"></div>
        </div>
        <span class="h-[1px] w-12 bg-gradient-to-l from-transparent to-white/20"></span>
      </div>
    </div>

    <!-- Grid de tarjetas -->
    <div class="grid gap-8 md:grid-cols-3">
      {spaces.map((space, index) => (
        <div class="space-card-reveal opacity-0 transition-all duration-1000 ease-out" style={`transition-delay: ${index * 150}ms;`}>
          <SpaceCard 
            title={space.title}
            description={space.description}
            href={space.href}
            icon={space.icon}
            tagline={space.tagline}
            color={space.color}
            delay={space.delay}
          />
        </div>
      ))}
    </div>
  </div>

  <!-- Script para animaciones de entrada -->
  <script>
    // Observador de intersección para animaciones al scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            if (entry.target.id === 'section-header') {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            } else {
              setTimeout(() => {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
              }, 150);
            }
          }
        });
      },
      { threshold: 0.1 }
    );

    // Observar elementos
    document.querySelectorAll('.space-card-reveal, #section-header').forEach((el) => {
      el.style.transform = 'translateY(30px)';
      observer.observe(el);
    });
  </script>
</section>