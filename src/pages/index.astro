---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import NavBar from '../components/NavBar.astro';   
import SpacesSection from '../components/SpacesSection.astro';
import ContactSection from '../components/ContactSection.astro';
import AboutSection from '../components/AboutSection.astro';



const pageTitle = "Cuarahí - Donde las Ideas Cobran Vida";
const pageDescription = "Únete a la comunidad de creadores, desarrolladores y educadores más vibrante de Bolivia. Acceso a laboratorios de última generación, talleres gratuitos y proyectos revolucionarios.";
const pageKeywords = "makerspace, devspace, eduspace, innovación, tecnología, Bolivia, Trinidad, Beni, laboratorio, fabricación digital, desarrollo web, educación";
---

<Layout 
    title={pageTitle} 
    description={pageDescription}
    keywords={pageKeywords}
>
    <NavBar />
    <Hero /> 
    <SpacesSection />
    <AboutSection />
    <ContactSection />
    <Footer />
</Layout>