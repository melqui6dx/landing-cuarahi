<script>
    // Scripts específicos para la página del MakerSpace
    document.addEventListener('DOMContentLoaded', function() {
        // Animación especial para las cards de equipamiento
        const equipmentCards = document.querySelectorAll('.reveal-element');
        
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('revealed');
                    }, index * 100); // Animación en cascada
                }
            });
        }, observerOptions);

        equipmentCards.forEach(card => {
            card.classList.add('reveal-element');
            observer.observe(card);
        });

        window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const decorativeElements = document.querySelectorAll('.hero-section .animate-float') as NodeListOf<HTMLElement>;
      decorativeElements.forEach((element, index) => {
        const speed = 0.5 + index * 0.1;
        element.style.transform = `translateY(${scrolled * speed}px)`;
      });
    });

         // Smooth scroll enlaces internos
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', event => {
        event.preventDefault();
        const href = (anchor as HTMLAnchorElement).getAttribute('href');
        if (!href) return;
        const target = document.querySelector(href) as HTMLElement;
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
        });
        });
    });
</script>